<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/write_screen">

  <fragment
    android:id="@+id/write_screen"
    android:name="dev.ruibot.haiku.presentation.write.WriteFragment"
    android:label="fragment_write_screen"
    tools:layout="@layout/fragment_write">
    <action
      android:id="@+id/action_title_screen_to_register"
      app:destination="@id/settings_screen"
      app:enterAnim="@anim/nav_default_enter_anim"
      app:exitAnim="@anim/nav_default_exit_anim"
      app:popEnterAnim="@anim/nav_default_pop_enter_anim"
      app:popExitAnim="@anim/nav_default_exit_anim" />
  </fragment>

  <fragment
    android:id="@+id/settings_screen"
    android:name="dev.ruibot.haiku.presentation.settings.SettingsFragment"
    android:label="fragment_settings_screen"
    tools:layout="@layout/fragment_settings">

  </fragment>

</navigation>
